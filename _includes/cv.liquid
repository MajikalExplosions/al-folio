{% comment %}
This template check the following variable:
  toc_sidebar: if the caller assign a value, we it will be used to decide
               where to put the sidebar ('left' or 'right')
{% endcomment %}

{% include cv-header.liquid %}

{% assign toc_content = "" %}
{% capture toc_content %}
  {% include cv-content.liquid %}
{% endcapture %}

{% unless toc_sidebar %}
  {% if page.toc and page.toc.sidebar %}
    {% assign toc_sidebar = page.toc.sidebar %}
  {% endif %}
{% endunless %}

{% if toc_sidebar %}
  {% comment %}
     the toc.liquid put the toc_content inside the toc element 
  {% endcomment %}
  {% include toc.liquid %}
{% else %}
  {{ toc_content }}
{% endif %}
